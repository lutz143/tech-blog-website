<div class="row">
  <div class="col-auto">
    <h2>Edit your post, {{user.username}}. <span style="color:transparent" id="post-id-hidden">{{id}}</span>
    </h2>
  </div>
</div>


<div class="row" id="sortable"></div>
  <div id="sortable">
    <div id="card-title">
      <div class="card-sub"> <img class="card-img-top img-fluid d-flex justify-content-between" id="user-prof-pic" src="./images/Josh Lutz_DC.jpg" alt="Profile Image">
      <div class="edit-buttons">
        <a href="/profile" class="btn btn-light d-flex justify-content-between" id="update-post-btn">Update</a>
        <a class="btn btn-danger d-flex justify-content-danger" id="delete-post-btn">Delete</a>
      </div>
      {{!-- <a class="btn btn-light d-flex justify-content-between" id="update-post-btn">Update</a> --}}
    </div>
      <div class="card-block">
        <div class="card-header">                
          <h4 class="employee-name">
            <input class="textarea" name="post-title" type="text" value="{{title}}" />            
          </h4>
          <div class="employee-details">            
            <input class="textarea" name="post-content" type="text" value="{{post_content}}" />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/editPost.js"></script>
<script src="/js/deletePost.js"></script>