<!-- Loop over each object in the post array -->
<div class="row" id="sortable"></div>
{{#each posts as |post| }}
  <div class="col-md-3" id="sortable">
    <div class="card-sub"> <img class="card-img-top img-fluid" id="user-prof-pic" src="./images/Josh Lutz_DC.jpg" alt="Profile Image">
      <div class="card-block">
        <div class="card-header">                
          <h4 class="employee-name">{{post.title}}</h4>
          <div class="employee-details">
            <div class="user-name">Created by {{post.user.username}} on {{format_date post.date_created}}</div>            
            <div class="post">{{post.post_content}}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}
</div>