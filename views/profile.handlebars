<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!
      <a class="btn btn-secondary" href="/post" id="new-post-btn">+ New Post</a>
    </h2>
  </div>
</div>
   
           
        
{{#if posts.length}}
    </div>

    {{#each posts as |post|}}
        {{> post-content}}
        <div class="row" id="sortable"></div>
          <div id="sortable">
            <div id="card-title">
              <div class="card-sub"> <img class="card-img-top img-fluid d-flex justify-content-between" id="user-prof-pic" src="./images/Josh Lutz_DC.jpg" alt="Profile Image">
              <a href="/posts/edit/{{post.id}}" class="btn btn-light d-flex justify-content-between" id="edit-post-btn">Edit</a>
            </div>
              <div class="card-block">
                <div class="card-header">                
                  <h4 class="employee-name">{{post.title}}</h4>
                  <div class="employee-details">
                    <div class="user-name">Created by {{post.user.username}} on {{format_date post.date_created}}</div>            
                    <div class="post">{{post.post_content}}</div>
                  </div>
                </div>
              </div>
            </div>
          </div>        
            
        </div>
    {{/each}}

{{else}}
<h6 class="pb-4 has-text-centered is-italic">you do not currently have any posts</h6>

{{/if}}