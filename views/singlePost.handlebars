<div class="row">
  <div class="col-auto">
    <h2>Comment on this post, {{user.username}}. <span style="color:transparent" id="post-id-hidden">{{id}}</span>
    </h2>
  </div>
</div>


<div class="row" id="sortable"></div>
  <div id="sortable">
    <div id="card-title">
      <div class="card-sub"> <img class="card-img-top img-fluid d-flex justify-content-between" id="user-prof-pic" src="./images/Josh Lutz_DC.jpg" alt="Profile Image">
      <div class="edit-buttons">        
        <a class="btn btn-secondary d-flex justify-content-secondary" id="delete-post-btn">Comment</a>
      </div>
      {{!-- <a class="btn btn-light d-flex justify-content-between" id="update-post-btn">Update</a> --}}
    </div>
      <div class="card-block">
        <div class="card-header">                
          <h4 class="employee-name">
            <input class="textarea" name="post-title" type="text" value="{{title}}" />            
          </h4>
          <div class="employee-details">
            <div class="user-name">Created by {{username}} {{posts.title}} on {{format_date post.date_created}}</div>            
            <input class="textarea" name="post-content" type="text" value="Comment on this post, {{username}}" />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/commentPost.js"></script>
